<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance" xmlns="https://java.sun.com/xml/ns/javaee" xmlns:web="https://java.sun.com/xml/ns/javaee" xsi:schemaLocation="https://java.sun.com/xml/ns/javaee https://java.sun.com/xml/ns/javaee/web-app_2_5.xsd http://java.sun.com/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee" id="WebApp_ID" version="2.5">
  <display-name>namoo.servlet</display-name>
  
  <!-- 브라우저 요청 파일이 없을 때 기본 응답하는 html 설정 -->
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>처음으로 작성하는 서블릿</servlet-name>
    <servlet-class>namoo.servlet.HelloServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>처음으로 작성하는 서블릿</servlet-name>
    <url-pattern>/처음으로 작성하는 서블릿</url-pattern>
    <url-pattern>/hello</url-pattern> 
    <!-- <url-pattern>/hello.do</url-pattern> -->
  </servlet-mapping>
</web-app>